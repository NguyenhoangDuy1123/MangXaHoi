<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= avatar_for @user %>
      <p><h1><%= @user.name %></h1></p>
      <p><%= link_to "View " + @user.name + " profile", @user %></p>
    </section>
	
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
		<table>
			<% @users.each do |user| %>
            <tr>
				<th><%= link_to avatar_for(user, size: 50), user %></th>
				<th><%= user.name %></th>
				<th><%= link_to "View " + user.name + " profile", user %></th>
			</tr>
          <% end %>
		</table>
      <%= will_paginate %>
    <% end %>
  </div>
  
</div>